{
	"name": "wxa",
	"version": "1.0.0",
	"devDependencies": {
		"commitizen": "^3.0.4",
		"cz-conventional-changelog": "^2.1.0",
		"husky": "^0.14.3",
		"lerna": "^2.9.0",
		"lint-staged": "^7.1.3"
	},
	"scripts": {
		"publish-next": "lerna publish --npm-tag=next --canary --ignore @wxa/form --ignore @wxa/plugin-dependencies-analysis",
		"commit": "git-cz"
	},
	"lint-staged": {
		"*.js": [
			"eslint --fix",
			"git add"
		]
	},
	"sideEffects": false,
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	},
	"publishConfig": {
		"access": "public"
	},
	"dependencies": {}
}
