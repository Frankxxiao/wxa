{
    "name": "@wxa/core",
    "version": "1.5.0",
    "description": "wxa core feature",
    "main": "./dist/main.js",
    "scripts": {
        "prebuild": "sh prebuild.sh",
        "build": "webpack src/index.js --output-path ./dist/ --optimize-minimize",
        "dev": "npm run prebuild && webpack src/index.js --output-path /Users/wenzetian/Documents/web/webank/miniprogram/test-vant/vant/node_modules/@wxa/core/src -w",
        "test": "jest --no-cache",
        "cover": "jest --coverage",
        "travis": "npm run cover",
        "precommit": "lint-staged",
        "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
        "prepublish": "npm run prebuild && npm run build",
        "commit": "git cz"
    },
    "author": "iveswen",
    "license": "MIT",
    "repository": "https://github.com/Genuifx/wxa.git",
    "devDependencies": {
        "@babel/core": "^7.1.0",
        "@babel/plugin-proposal-decorators": "^7.1.0",
        "@babel/plugin-proposal-class-properties": "^7.1.0",
        "@babel/preset-env": "^7.1.0",
        "babel-core": "^7.0.0-bridge.0",
        "babel-eslint": "^10.0.0",
        "babel-loader": "^8.0.0",
        "conventional-changelog": "^1.1.24",
        "conventional-changelog-cli": "^1.3.22",
        "cz-conventional-changelog": "^2.1.0",
        "eslint": "^4.19.1",
        "eslint-config-google": "^0.9.1",
        "eslint-plugin-jest": "^21.22.1",
        "husky": "^0.14.3",
        "jest": "^23.6.0",
        "lint-staged": "^6.1.1",
        "uglifyjs-webpack-plugin": "^1.3.0",
        "webpack": "^4.20.2",
        "webpack-cli": "^3.1.1"
    },
    "dependencies": {
        "lodash": "^4.17.11"
    },
    "lint-staged": {
        "*.js": [
            "eslint --fix",
            "git add"
        ]
    },
    "sideEffects": false,
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    },
    "publishConfig": {
        "access": "public"
    }
}
